div class='sugestao'
    - @users.each do |user|
        div class="profile"
            div class="capa"
                - if user.capa.attached?
                    - point = user.capa.blob.metadata['width'] * 0.025
                    //= #image_tag user.capa.variant( gravity: 'center', draw: 'image Over 0,0 0,0 "/home/mauricio/fansour-clone/app/assets/images/icone.png"'), class: "img-sug-capa"
                    = image_tag user.capa.variant( gravity: 'South-East', fill: 'grey', pointsize: 39.6, font: '/usr/share/fonts/truetype/dejavu/DejaVuSans.ttf', draw: 'text 0,0 "FansOur.com/Mauriciomrox "'), class: "img-sug-capa"
                - else
                    = image_tag "capa-default.png", class: "img-sug-capa"
            div class="avatar"
                - if user.avatar.attached?
                    //= image_tag user.avatar, class: "img-avatar"
                    - point = user.avatar.blob.metadata['width'] * 0.025
                    = image_tag user.avatar.variant( gravity: 'South-East', fill: 'gray', pointsize: 9.7, font: '/usr/share/fonts/truetype/dejavu/DejaVuSans.ttf', draw: 'text 0,0 "FansOur.com/Mauriciomrox "'), class: "img-avatar"
                - else
                    = image_tag "avatar-default.png", class: "img-avatar"
            div class="data"                            
                = link_to '/'+user.nome_arroba
                    span
                        = user.nome_publico
                    br
                    span 
                        = '@' + user.nome_arroba

    