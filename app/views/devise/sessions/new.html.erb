<div id="div-index">
  <div id="logo"></div>
  
  <div id="form" class="form-hide">
    <div id="row-form" class="row row-form-hide">
      <%= turbo_frame_tag 'login' do %>
        <h1 class="mb-3">Entrar</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo_frame: 'login', controller: 'login'}) do |f| %>
              <%= f.email_field :email, class: "form-control mb-3", autofocus: true, autocomplete: "email", required: 'required', placeholder: "E-mail" %>
            <%= f.password_field :password, class: "form-control mb-3", autocomplete: "current-password", required: 'required', placeholder: "Senha" %>
          <div class="actions mb-3">
            <button name="button" type="submit" class="btn-login btn" id="submit-login">
              <span class="spinner-border spinner-grow-sm visually-hidden" aria-hidden="true"></span>
              <span role="status">Entrar</span>
            </button>
          </div>
        <% end %>
        <% if notice %>
          <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
      <% end %>
      <div class="links">
        <span id="cadastro">Increva-se</span>
        <span id="senha">Esqueci minha senha</span>
      </div>
    </div>
  </div>
  
</div>

<div class="modal fade" id="modal-cadastro" tabindex="-1" role="dialog" aria-labelledby="ModalCadastro" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Inscreva-se no <span class="fansour">FansOur!<span></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true"></span>
        </button>
      </div>
      <div class="modal-body">
        <%= turbo_frame_tag 'cadastro' do %>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo_frame: 'cadastro', controller: 'login'}) do |f| %>    
              <%= f.email_field :email, class: "form-control", autocomplete: "email", placeholder: "E-mail", required: "required" %><br />
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caracteres no minÃ­mo)</em><br />
              <% end %>
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "Senha", required: "required" %><br />
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "Confirme a senha", required: "required" %><br />
            <div class="actions">
              <button name="button" type="submit" class="btn-login btn" id="submit-login">
                <span class="spinner-border spinner-grow-sm visually-hidden" aria-hidden="true"></span>
                <span role="status">Cadastrar</span>
              </button>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>